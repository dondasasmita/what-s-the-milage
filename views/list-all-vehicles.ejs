<!-- add partials -->
<% include partials/header.ejs%>


<div class="container">
      <!-- To put search bar for vechile on the list -->
      <% if(vehicles.length > 0){%>
        <table class="table table-bordered" id="list-of-vehicles">
          <thead>
            <tr>
              <th>Vehicle Number</th>
              <th><i class="fas fa-signal"></i></th>
              <th><i class="fas fa-shuttle-van"></th>
              <th>Last Update</th>
              <th><i class="fas fa-info"></i></th>
            </tr>
          </thead>
          <tbody>
            <% vehicles.forEach((vehicle, index) => { %>
            <tr>
              <td scope="row"><%= vehicle.number%></td>
              <% if (vehicle.status === "online") { %>
                <td scope="row"><i class="fas fa-check"></i></td>
              <% } else { %>
                <td scope="row"><%= vehicle.status%></td>
              <% } %>
              <td scope="row"><%= vehicle.type%></td>
              <td scope="row"><%= vehicle.last_update%></td>
              <td>
                <a href="/vehicle-info/<%= vehicle.number%>" class="btn btn-primary"
                  >Click Here</a
                >
              </td>
            </tr>
            <% }) %>
          </tbody>
        </table>
        <%} %>
</div>
  </body>
</html>
